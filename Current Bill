#include <stdio.h>

int main() {
    float units, amount, surcharge, total;

    scanf("%f", &units);

    if (units < 200)
        amount = units * 1.20;
    else if (units < 400)
        amount = units * 1.50;
    else if (units < 600)
        amount = units * 1.80;
    else
        amount = units * 2.00;

    if (amount > 400)
        surcharge = amount * 0.15;
    else
        surcharge = 100;

    total = amount + surcharge;

    printf("Electricity Bill = %.2f\n", total);

    return 0;
}
