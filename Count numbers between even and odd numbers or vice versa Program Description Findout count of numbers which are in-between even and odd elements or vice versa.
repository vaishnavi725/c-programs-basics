#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    int arr[n];
    for (int i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    int count = 0;

    for (int i = 1; i < n - 1; i++) {
        int left = arr[i - 1] % 2;
        int right = arr[i + 1] % 2;
        if (left != right)
            count++;
    }

    printf("%d", count);
    return 0;
}
